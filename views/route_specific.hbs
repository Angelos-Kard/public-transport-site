<main>
    <h2>Δρομολόγιο {{lineName}}</h2>


    <div class="main-box" id="timetable">
        <div class="accordion"><h3>Ώρες Δρομολογίων (από αφετηρία)</h3></div>
        <div class="panel">
            <hr class="solid">
            {{#each day_time}}
                <button class="accordion btn-accordion">{{this.days}}</button>
                <div class="panel">
                    <ul class="lists">
                        {{#each this.time}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="main-box" id="bus-stops">
        <div class="accordion"><h3>Στάσεις</h3></div>
        <div class="panel">
            <hr class="solid">
            <ul class="lists">
                {{#each bus_stop}}
                    <li>{{this.onomaStasis}}</li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="main-box" id="line-map">
        <div class="accordion"><h3>Χάρτης</h3></div>
        <div class="panel">
            <hr class="solid">
                <div id="map"></div>
            <script src="https://maps.googleapis.com/maps/api/js?callback=initMap&libraries=&v=weekly" async></script>
            <script>
                let map;

                function initMap() {
                map = new google.maps.Map(document.getElementById("map"), {
                    center: { lat: -34.397, lng: 150.644 },
                    zoom: 8,
                });
                }
            </script>
        </div>
    </div>

</main>