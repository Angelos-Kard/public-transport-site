<main>
    <h2>Δρομολόγιο {{lineName}}</h2>


    <div class="main-box" id="timetable">
        <div class="accordion"><h3>Δρομολόγια</h3></div>
        <div class="panel">
            <hr class="solid">
            <table>
                <thead>
                    <tr>
                        {{#each days}}
                            <th></th>
                        {{/each}}
                    </tr>
                </thead>
                <tbody>
                    {{#each time}}
                        <tr>
                            {{#each days}}
                                <td></td>
                            {{/each}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <div class="main-box" id="bus-stops">
        <div class="accordion"><h3>Στάσεις</h3></div>
        <div class="panel">
            <hr class="solid">
            <ul id="stops">
                {{#each bus_stop}}
                    <li>{{this.onomaStasis}}</li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="main-box" id="line-map">
        <div class="accordion"><h3>Χάρτης</h3></div>
        <div class="panel">
            <hr class="solid">
        </div>
    </div>

</main>